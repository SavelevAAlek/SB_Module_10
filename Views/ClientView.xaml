<UserControl x:Class="SB_Module_10.Views.ClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SB_Module_10.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500"
             Background="Transparent">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Фамилия:"/>
            <TextBlock Text="{Binding SelectedClient.Surname}"/>
            <TextBlock Text="Имя:"/>
            <TextBlock Text="{Binding SelectedClient.Name}"/>
            <TextBlock Text="Отчество:"/>
            <TextBlock Text="{Binding SelectedClient.Patronymics}"/>
            <TextBlock Text="Номер телефона:"/>
            <TextBlock Text="{Binding SelectedClient.PhoneNumber}"/>
            <TextBlock Text="Паспортные данные:"/>
            <TextBlock Text="{Binding PassportData}"/>
            <TextBlock Text="Дата последнего изменения:"/>
            <TextBlock Text="{Binding SelectedClient.DataChangedTime}"/>
            <TextBlock Text="Кто изменил:"/>
            <TextBlock Text="{Binding SelectedClient.ChangeInitiator}"/>
            <ListBox ItemsSource="{Binding SelectedClient.Changes}">
                
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
