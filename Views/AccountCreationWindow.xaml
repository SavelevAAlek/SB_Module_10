<Window x:Class="SB_Module_10.Views.AccountCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SB_Module_10.Views"
        mc:Ignorable="d"
        Title="AccountCreationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <RadioButton Content="Депозитный"/>
            <RadioButton Content="Недепозитный" Margin="0,20,0,0"/>

            <Button Content="Открыть депознитный счет"
            Command="{Binding CreateAccoutCommand}" CommandParameter="Депозитный"/>
            <Button Content="Открыть недепознитный счет"
            Command="{Binding CreateAccoutCommand}" CommandParameter="Недепозитный"/>
            
        </StackPanel>
    </Grid>
</Window>
